<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/stars.css">
    <div class="row">
        <div class="col-6">
            <div id="spotterCarousel" class="carousel slide" data-bs-ride="spotterCarousel">
                <div class="carousel-inner">
                    <% spotters.image.forEach((img, i)=> { %>
                        <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
                            <img class="d-block w-100" src="<%= img.url %>" alt="">
                        </div>
                        <% }) %>
                </div>
                <% if(spotters.image.length> 1) { %>
                    <a class="carousel-control-prev" href="#spotterCarousel" role="button" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#spotterCarousel" role="button" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                    <% } %>
            </div>
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= spotters.title %>
                    </h5>
                    <p class="card-text">
                        <%= spotters.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= spotters.location %>
                    </li>
                    <li class="list-group-item">
                        <% if (spotters.author) { %>
                            Submitted by <%= spotters.author.username %>
                                <% } else { %>
                                    Submitted by an unknown user
                                    <% } %>
                    </li>
                    <li class="list-group-item">$<%= spotters.price %>
                    </li>
                </ul>
                <ul>
                    <% if(currentUser && spotters.author.equals(currentUser._id)) {%>
                </ul>
                <div class="card-body">
                    <a href="/spotters/<%= spotters._id %>/edit" class="card-link btn btn-info">Edit</a>
                    <form class="d-inline" action="/spotters/<%= spotters._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                    <% } %>
                </div>
                <div class="card-footer">
                    20 days ago
                </div>
            </div>
        </div>
        <div class="col-6">
            <div id="map" style="width: 100%; height: 300px;"></div>
            <% if(currentUser) {%>
                <h2>Leave a Review</h2>
                <form action="/spotters/<%= spotters._id  %>/reviews" method="POST" class="mb-3 validated-form">
                    <div class="mb-3">
                        <label class="form-label" for="rating">Rating</label>
                        <input type="range" min="1" max="5" id="rating" name="review[rating]">
                    </div>
                    <div class="mb-3">
                        <fieldset class="starability-basic">
                            <legend>First rating:</legend>
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1"
                                checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="">Review</label>
                        <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3"
                            required></textarea>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                    <button class="btn btn-success">Submit</button>
                </form>
                <% } %>
                    <% for(let review of spotters.reviews) { %>
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= review.author.username %>
                                </h5>
                                <p class="starability-result" data-rating="<%= review.rating %>">
                                    Rated: <% review.rating %> stars
                                </p>
                                <p class="card-text">
                                    Review: <%= review.body %>
                                </p>
                                <% if(currentUser && review.author.equals(currentUser._id)) {%>
                                    <form
                                        action="/spotters/<%= spotters._id %>/reviews/<%= review._id %>?_method=DELETE"
                                        method="POST">
                                        <button class="btn-sm btn-danger">Delete</button>
                                    </form>
                                    <% } %>
                            </div>
                        </div>
                        <% } %>
        </div>
    </div>

    <%-"<script>"%>
        const maptilerApiKey = '<%- process.env.MAPTILER_API_KEY %>';
            const spotters = <%- JSON.stringify(spotters) %>;
                <%-"</script>"%>

                    <script src="/javascripts/showPageMap.js"></script>